package fx {		import supers.Circle;		public class Splash extends Circle {				var hit2:Boolean=false;				public function Splash (o,br):void {						//init			super.init (o,br);						//extra physics properties			ph.sh = "circ";		//shape			ph.r = 25;			//radius						}				public function main ():void {}				public function hit (obj:Object) {						if (!hit2) { brain.sys.audio.ply ("splash"+rand(1,3),.7,false); hit2=true }						var vel=obj.vel;			var vv=Math.round(Math.sqrt((vel.x*vel.x)+(vel.y*vel.y)))			var l=rand2(0,vv/1.5);			for (var i:uint=1; i<l; i++) { brain.create ({nam:"Water", px:pos.x+rand2(-20,20), py:pos.y, vx:rand2(vel.x-6,vel.x+6), vy:rand(-2*vv,0), depth:["world","main"]}) }					}											}	}