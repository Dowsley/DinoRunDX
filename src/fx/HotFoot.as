package fx {		import flash.display.MovieClip;		public class HotFoot {				private var dino:MovieClip;		private var c:uint=0;				public function HotFoot (dino:MovieClip,pen):void {						dino.brain.sys.audio.ply ("hotFoot",.5,false);			this.dino=dino;			dino.vel.y=-dino.rand2(8,12);			dino.vel.x+=(pen)?dino.rand2(-12,4):0;			dino.pos.y-=6;					}				public function main () {						if (rand(0,c)<5) { dino.brain.create ({nam:"Smoke", px:dino.x+rand(-1*dino.ph.r,dino.ph.r), py:dino.y-rand(0,40), v:rand(-4,-2), sz:rand(10,20), dur:2, front:(rand(0,1)==0)?true:false, depth:["world","main"]}) }			c++;			if (c>25) {								remove();							} else {								dino.accelMax=.3;							}					}				public function rand(min:int, max:int):int {			return (Math.round(Math.random()*(max-min))+min);		}				public function remove () {						if (dino.accelMaxBase<.9) { dino.accelMaxBase=.9 }			dino.accelMax=dino.accelMaxBase;			dino.velXMax=14*dino.accelMax;			dino.removeSYS ("hotFoot") ;			dino=null;					}			}	}