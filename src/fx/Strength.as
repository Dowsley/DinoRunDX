package fx {		import flash.display.MovieClip;	import flash.geom.ColorTransform;		public class Strength {				private var clip:MovieClip;		private var cMax:uint;		private var c:int=0;		private var mO:int;		private var ct:ColorTransform;		private var cc:Number=1;		private var inc:Number=-.0333;				public function Strength (clip:MovieClip,cMax):void {						this.clip=clip;			this.cMax=cMax;			clip.str=true;			mO=clip.ph.m;			clip.ph.m=mO+80;			ct = clip.transform.colorTransform;					}				public function main () {			c++;			if (c>=cMax) { remove() } else {								//eye				clip.master.ccE.cChange ([clip.rand(0,255),0,0,1,1,1,1])								//body				cc+=inc;				if (cc<0) { inc=.0333 }				if (cc>1)  { inc=-.0333 }				ct.greenMultiplier = cc;				ct.blueMultiplier = cc;				clip.transform.colorTransform = ct;							}					}				public function addOn (time) {						cMax+=time*.75;					}						public function remove () {						ct.greenMultiplier = 1;			ct.blueMultiplier = 1;			clip.transform.colorTransform = ct;			clip.master.ccE.cChange ([clip.master.eyeC[0],clip.master.eyeC[1],clip.master.eyeC[2],1,1,1,1]);			clip.ph.m=mO;			clip.str=false;			clip.removeSYS ("str");			clip=null;			ct=null;						}			}	}