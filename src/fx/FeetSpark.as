package fx {		import flash.display.MovieClip;		public class FeetSpark {				private var clip:MovieClip;		private var cMax:uint;		private var c:int=0;				public function FeetSpark (clip:MovieClip):void {						this.clip=clip;			this.cMax=10;		}				public function main () {						c++;						//sparkles			var dirA=(Math.random()<.5)?[[0,-1],[1,0],[0,1],[-1,0]]:[[.65,-.65],[.65,.65],[-.65,.65],[-.65,-.65]];			for (var i:int=0; i<4; i++) { 								clip.brain.create ( {nam:"DotFX", colr:"Y", alph:.75, c:30, velA:.975, px:clip.x, py:clip.y+clip.ph.r, vx:dirA[i][0], vy:dirA[i][1], depth:["world","main"]} ) ;								}							if (c>=cMax) { remove() }					}				public function remove () {			clip.removeSYS ("feetSpark");			clip=null;						}			}	}