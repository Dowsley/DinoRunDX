package fx {		import flash.display.MovieClip;		public class Impact {				var brain:Object;		var bgc:int=0;		var bga:Number=0;		var bgi:Number=30;		var fgc:int=0;		var fga:Number=0;		var fgi:Number=25;				public function Impact (brain:Object):void {						this.brain=brain;					}				public function main () {						//BG			bgc++;			switch (bgc) {								case 6: bgi=-2; break;				case 81: bgi=bga=0; break;							}			bga+=bgi;			brain.worldBG.cc.cChange ([bga,bga,bga/2,1,1,1,1]);						//FG			fgc++;			brain.world.bgCC.cChange ([fga,fga,fga/1.5,1,1,1,1]);			brain.world.mainCC.cChange ([fga,fga,fga/1.5,1,1,1,1]);			brain.world.fgCC.cChange ([fga,fga,fga/1.5,1,1,1,1]);			switch (fgc) {								case 11: fgi=-2; break;				case 135: fgi=fga=0; break;				case 140: remove(); break;							}			fga+=fgi;					}				public function remove () {						brain.removeSYS2("impact"); 			brain=null;					}			}	}