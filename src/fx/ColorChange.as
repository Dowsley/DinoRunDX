package fx {		import flash.geom.ColorTransform;		public class ColorChange {				private var clip;		private var ct:ColorTransform;				public function ColorChange (clip):void {						this.clip=clip;			ct = clip.transform.colorTransform;					}				public function cChange (cData) {						ct.redOffset = cData[0];			ct.greenOffset = cData[1];			ct.blueOffset = cData[2];			ct.redMultiplier += (cData[3]-ct.redMultiplier)/20;			ct.greenMultiplier += (cData[4]-ct.greenMultiplier)/20;			ct.blueMultiplier += (cData[5]-ct.blueMultiplier)/20;			ct.alphaMultiplier = cData[6];			clip.transform.colorTransform = ct;					}				public function nulls () {						clip=null;			ct=null;					}			}	}