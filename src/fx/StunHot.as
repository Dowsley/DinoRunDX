package fx {		import flash.display.MovieClip;		public class StunHot {				private var dino:MovieClip;		private var c:uint=0;				public function StunHot (dino:MovieClip, less:Boolean = false):void {						this.dino=dino;			dino.vel.y-=dino.rand2(4,6);			dino.vel.x-=(dino.rand2(20,12) * (less ? .15 : 1));			dino.pos.y-=3;			dino.brain.sys.audio.ply ("hotFoot",.3,false);					}				public function main () {						if (rand(0,c)<4) { dino.brain.create ({nam:"Smoke", px:dino.x+rand(-1*dino.ph.r,dino.ph.r), py:dino.y-rand(0,40), v:rand(-4,-2), sz:rand(10,20), dur:2, front:(rand(0,1)==0)?true:false, depth:["world","main"]}) }			c++;			if (c>20) {								remove();							} else {								dino.accelMax=.3;							}					}				public function rand(min:int, max:int):int {			return (Math.round(Math.random()*(max-min))+min);		}				public function remove () {						if (dino.accelMaxBase<.9) { dino.accelMaxBase=.9 }			dino.accelMax=dino.accelMaxBase;			dino.velXMax=14*dino.accelMax;			dino.removeSYS ("stunHot") ;			dino=null;					}			}	}