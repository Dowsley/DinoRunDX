package gfx {		import flash.display.MovieClip;		import supers.FX;		public class Smoke extends FX {				private var c:int=0;		private var size:int		private var a:Number;		private var yMov:Number;		private var xo:Number;				public function Smoke (o,br):void {						assignGFX(new _Smoke);			init (o,br,this);			size=rand(o.sz-5,o.sz);			graphic.gotoAndStop (size);			a=rand2(.25,.6);			alpha=a;			yMov=rand2(o.v,o.v+2);			xo=x;						}				public function main ():void {						c++;			if (c==5) {								c=0;				size-=rand(1,o.dur);				graphic.gotoAndStop (size);				a+=rand2(-.05,.025);				alpha=a;				x=xo+(Math.round((rand(-6,6)/3)))*3;				if (size<1) { deleteAll() }							}			y+=yMov;					}			}	}