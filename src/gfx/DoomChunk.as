package gfx {		import flash.display.MovieClip;	import flash.geom.Point;		import supers.MovingClip;		public class DoomChunk extends MovingClip {				private var varNum:uint;		private var rollI:int;		private var rollC:int=-1;		private var ang:Number=0;		private var varNums:Object;		private var c:uint=0;				override public function nulls() {						super.nulls();			varNums=null;					}				public function DoomChunk (o,brain):void {						//init			assignGFX(new _DoomChunk);			init (o,brain,this);						//typs			varNums = { G:4, R:3, T:4 }			varNum=rand(1,varNums[o.typ]);						if (o.typ=="G") {								switch (brain.S.colorV) {										case "B": varNum+=4; break;					case "C": varNum+=8; break;					case "V": varNum+=12; break;									}							}							//appearance			if (brain.S.df) {				o.typ = "H";				varNum = rand(1,8);			}						graphic.gotoAndStop (o.typ+varNum+"_0");						//extra physics properties			ph.sh = "circ";		//shape			ph.g = .3;		//gravity						}				public function main ():void {						//run functions common to all MovingClips			mainMC ();						//roll it			rollI = (Math.abs(vel.x)<1)?(1-Math.abs(vel.x))*200:(20-Math.abs(vel.x))/1;			if (Math.abs(vel.x)<.1) { rollI=100000000 }			rollC++;			if (rollC>rollI) {								rollC=-1;				ang=(vel.x>0)?ang+45:ang-45;				if (ang<0) { ang=315 }				if (ang>315) { ang=0 }				graphic.gotoAndStop (o.typ+varNum+"_"+ang);							}						c++;			if (c>150)  { deleteAll() }		}			}	}