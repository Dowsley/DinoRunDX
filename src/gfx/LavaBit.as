package gfx {		import supers.MovingDot;	//	import flash.display.Bitmap;	import flash.display.BitmapData;		public class LavaBit extends MovingDot {				public var c:int=0;				public function LavaBit (o,brain):void {						//init			var colors:Array = [0xFF9E00,0xFFB928];											init (o, brain, true, colors[rand(0,colors.length-1)]);						//extra physics properties			ph.sh = "circ"		//shape			ph.f = .99,			//friction			ph.bn = 0,			//bounce			ph.g = .35,			//gravity			ph.m = 1			//mass						}				public function main ():void {						//run functions common to all MovingDots			mainMD ();						c++;			if (c>50) { deleteAll() }		}				// REACTIONS				public function remove (obj) {						deleteAll();					}			}	}