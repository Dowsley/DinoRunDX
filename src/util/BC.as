package util {		public class BC  {				private var obj:Object;		private var c:int=0;		private var MP:Object;		private var id:String;				public function BC (o):void {						obj=o;			MP=obj.brain.sys.MP;			id=obj.o.nam+";"+obj.o.mpid+";"					}				public function main ():void {						c++;			if (c>=50) {								//broadcast info about this thing				MP.sendToRoom ("OU"+id+Math.round(obj.x)+";"+Math.round(obj.y)+";"+rnd(obj.vel.x)+";"+rnd(obj.vel.y));				c=0;			}					}				public function rnd (num) { return (Math.round(num*100))/100 }			}	}