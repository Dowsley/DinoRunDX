package util {		import flash.geom.Point;		public class RU  {				private var obj:Object;		public var tmx:Number;		public var tmy:Number;		private var vel:Point;		private var pos:Point;				public function RU (o,tmx,tmy):void {						obj=o;			this.tmx=tmx;			this.tmy=tmy;					}				public function main ():void {						tmx+=(obj.vel.x*obj.brain.hc);			tmy+=(obj.vel.y*((obj.vel.y>0)?obj.brain.hc:1));			obj.pos.x+=(tmx-obj.pos.x)/10;			obj.pos.y+=(tmy-obj.pos.y)/10;					}				public function upd (px,py) {						tmx=px;			tmy=py;					}			}	}